#!/usr/bin/env bash

set -e

SCRIPT_DIR="$(dirname "$0")"
cd "$SCRIPT_DIR/.."

echo Building dependencies...
./rebar3 compile

ERL="erl"
# ERL="$ERL_TOP/bin/cerl -debug"

$ERL +MBas aobf +MBlmbcs 512 +A100 +SDio100 +Bi -pa `./rebar3 path` \
	-config config/sys.config -name 'data-doctor@127.0.0.1' \
	-run ar_data_doctor main ${@:1}

