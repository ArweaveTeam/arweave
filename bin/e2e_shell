#!/usr/bin/env bash

SCRIPT_DIR="$(dirname "$0")"
cd "$SCRIPT_DIR/.."

./ar-rebar3 e2e compile

if [ "$(uname -s)" == "Darwin" ]; then
    RANDOMX_JIT="disable randomx_jit"
else
    RANDOMX_JIT=
fi

export ERL_EPMD_ADDRESS=127.0.0.1

ERL_E2E_OPTS="-pa $(./rebar3 as e2e path) $(./rebar3 as e2e path --base)/lib/arweave/test -config config/sys.config"
echo -e "\033[0;32m===> Running e2e shell...\033[0m"

if pgrep -f "beam.smp" > /dev/null; then
    echo "BEAM is already running. Exiting."
    exit 1
else
    erl $ERL_E2E_OPTS -name main-e2e@127.0.0.1 -setcookie e2e -run ar shell_e2e 2>&1
fi
kill 0
